package baitap2.yeucau2;

public class Test {
    public static void main(String[] args) {
	Sum sum = new Sum();
	CreateArray createArray = new CreateArray();
	
//	int[] arr1 = new int[] {1,2,3,4,6,7,8,9,10};//50
//	int[] arr2 = new int[] {1,2,3,4,6,7,8,9,11};//51
//	int[] arr3 = new int[] {1,2,3,4,6,7,8,9,12};//52
//	int[] arr4 = new int[] {1,2,3,4,6,7,8,9,13};//53
	
	int[] arr1 = createArray.getArr();
	
	
	
	Runnable task = new ArrayTask(sum, arr1);
	
	
	Thread thread1 = new Thread(task);
	Thread thread2 = new Thread(task);
	Thread thread3 = new Thread(task);
	Thread thread4 = new Thread(task);
	
	thread1.start();
	thread2.start();
	thread3.start();
	thread4.start();
	
	try {
	    thread1.join();
	    thread2.join();
	    thread3.join();
	    thread4.join();
	} catch (Exception e) {
	    e.printStackTrace();
	}
	
	System.out.println(createArray.getSum());
	
    }

}
