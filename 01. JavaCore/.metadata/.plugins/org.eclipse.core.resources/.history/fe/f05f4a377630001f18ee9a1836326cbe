package baitap2.yeucau2;

public class Test {
    public static void main(String[] args) {
	Sum sum = new Sum();
	
	int[] arr1 = new int[] {1,2,3,4,6,7,8,9,10};//50
	int[] arr2 = new int[] {1,2,3,4,6,7,8,9,11};//51
	int[] arr3 = new int[] {1,2,3,4,6,7,8,9,12};//52
	int[] arr4 = new int[] {1,2,3,4,6,7,8,9,13};//53
	
	
	
	Runnable task1 = new ArrayTask(sum, arr1);
	Runnable task2 = new ArrayTask(sum, arr2);
	Runnable task3 = new ArrayTask(sum, arr3);
	Runnable task4 = new ArrayTask(sum, arr4);
	
	
	Thread thread1 = new Thread(task1);
	Thread thread2 = new Thread(task2);
	Thread thread3 = new Thread(task3);
	Thread thread4 = new Thread(task4);
	
	thread1.start();
	thread2.start();
	thread3.start();
	thread4.start();
	
	try {
	    thread1.join();
	    thread2.join();
	    thread3.join();
	    thread4.join();
	} catch (Exception e) {
	    e.printStackTrace();
	}
    }

}
