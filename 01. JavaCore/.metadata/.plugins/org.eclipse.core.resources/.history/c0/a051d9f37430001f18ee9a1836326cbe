package baitap2.yeucau2;

public class Sum {
    private int sum = 0;

    public Sum() {
    }

    public int getSum() {
	return sum;
    }

    public void caculator(int[] arr) {
	int sumArr = 0;
	for (int i = 0; i < arr.length; i++) {
	    sumArr += arr[i];
	}
//	System.out.println("pending " + sumArr);
//	try {
//	    Thread.sleep(1000);
//	} catch (Exception e) {
//	    e.printStackTrace();
//	}
//	    System.out.println("adding " + sumArr);
//	    this.sum += sumArr;
//	        System.out.println("S = " + this.sum);

	synchronized (this) {
	    System.out.println("adding " + sumArr);
	    this.sum += sumArr;
	    System.out.println("S = " + this.sum);
	}
    }

}
