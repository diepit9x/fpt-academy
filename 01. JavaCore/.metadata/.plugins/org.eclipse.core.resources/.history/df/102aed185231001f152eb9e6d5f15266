package fa.training.util;

public class SQLCommand {
    //Customer queries
    public static String CUSTOMER_QUERY_FIND_ALL_CUSTOMERS = "SELECT * FROM dbo.Customer";
    public static String CUSTOMER_QUERY_FIND_BY_CUSTOMERID = "SELECT * FROM dbo.Customer WHERE customer_id = ?";
    public static String CUSTOMER_QUERY_ADD = "{CALL Insert_Customer(?, ?)}";
    public static String CUSTOMER_QUERY_DELETE = "{CALL Delete_Customer(?, ?)}";
    public static String CUSTOMER_QUERY_UPDATE = "{CALL Update_Customer(?, ?, ?)}";
    
    //Order
    public static String ORDER_QUERY_FIND_BY_CUSTOMERID = "SELECT * FROM dbo.[Order] WHERE customer_id = ?";
    public static String ORDER_QUERY_ADD = "INSERT INTO dbo.[Order](order_date, customer_id, employee_id, total) VALUES(?, ?, ?, ?)";
    
    //LineItem
    public static String LINEITEM_QUERY_FIND_BY_ORDERID = "SELECT * FROM dbo.LineItem WHERE order_id = ?";
    public static String LINEITEM_QUERY_COMPUTE_ORDER_TOTAL = "{? = CALL dbo.Order_Total(?)}";
}
