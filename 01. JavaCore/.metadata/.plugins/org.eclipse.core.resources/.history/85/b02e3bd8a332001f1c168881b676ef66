package fa.training.util;

import java.time.LocalDate;

public class Validator {
    public static final String DATE_PATTERN = "^(0[1-9]|[12][0-9]|3[01])(\\/)(0[1-9]|1[0-2])(\\/)\\d{4}$";
    public static final String EMAIL_PATTERN = "^[A-Za-z0-9+_.-]+@[A-Za-z0-9.-]+$";
    
    /**
     * Check date format value is valid
     * @param date
     * @return
     */
    public static boolean isDate(String date) {
	try {
            LocalDate birthDate = LocalDate.parse(date);
            LocalDate minDate = LocalDate.of(1900, 1, 1);
            LocalDate maxDate = LocalDate.now();
            return (birthDate.isAfter(minDate) || birthDate.isEqual(minDate)) && (birthDate.isBefore(maxDate) || birthDate.isEqual(maxDate));
        } catch (Exception e) {
            return false;
        }
    }
    
    public static void main(String[] args) {
	String date = "1890-10-10";
	System.out.println(isDate(date));
    }

}
