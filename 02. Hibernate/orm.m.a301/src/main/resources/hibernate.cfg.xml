<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">123456789</property>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=asssignment2_otp3;encrypt=true;trustServerCertificate=true</property>
        <property name="hibernate.default_schema">dbo</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        
        <!-- lazy loading -->
         <property name="hibernate.enable_lazy_load_no_trans">true</property>
        
        <mapping class="fa.training.entities.Candidate" />
        <mapping class="fa.training.entities.EntryTest" />
        <mapping class="fa.training.entities.Interview" />
        
        
    </session-factory>
</hibernate-configuration>
