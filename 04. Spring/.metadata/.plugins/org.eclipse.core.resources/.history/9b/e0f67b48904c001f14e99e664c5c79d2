<script>
  var data = [
    {
      maKH: 1,
      tenKH: "Nguyen van a",
      diaChi: "dia chi 1",
      soDienThoai: "0987654321",
      email: "tien1@no1.vn",
    },
    {
      maKH: 2,
      tenKH: "Nguyen van b",
      diaChi: "dia chi 2",
      soDienThoai: "0987654321",
      email: "tien@no1.vn",
    },
  ];

  function populateTable(data) {
    var $tableBody = $("#table-body");
    // Add event listeners for delete buttons
    $tableBody.on("click", ".delete-khachHang", function () {
      var index = $(this).data("index");
      var confirmDelete = confirm("Bạn có chắc chắn muốn xóa không?");
      if (confirmDelete) {
        data.splice(index, 1);
        populateTable(data);
      }
    });
  }
  populateTable(data);
</script>

