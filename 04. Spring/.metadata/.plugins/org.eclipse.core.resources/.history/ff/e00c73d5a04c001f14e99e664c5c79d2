<script>
  var data = [
    {
      maDV: "DV001",
      tenDV: "Ban may",
      donVi: "VND",
      donGia: "10000",
    },
    {
      maDV: "DV002",
      tenDV: "Thue may",
      donVi: "VND",
      donGia: "3000",
    },
  ];

  function populateTable(data) {
    var $tableBody = $("#table-body");
    $tableBody.empty();

    data.forEach(function (item, index) {
      var row = `
        <tr>
          <td>${item.maDV}</td>
          <td>${item.tenDV}</td>
          <td>${item.donVi}</td>
          <td>${item.donGia}</td>
          <td>
            <button class="btn btn-warning edit-dichVu"><i class="fa fa-pencil-square-o"></i></button>
            <button class="btn btn-danger delete-dichVu" data-index="${index}"><i class="fa fa-trash-o"></i></button>
          </td>
        </tr>
      `;
      $tableBody.append(row);
    });

    // Add event
    $tableBody.on("click", ".delete-dichVu", function () {
      var index = $(this).data("index");
      var confirmDelete = confirm("Bạn có chắc chắn muốn xóa không?");
      if (confirmDelete) {
        data.splice(index, 1);
        populateTable(data);
      }
    });
  }

  populateTable(data);
</script>
