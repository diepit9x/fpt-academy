<script>
  var data = [
    {
      maKH: "KH001",
      tenKH: "Nguyen Van A",
      maMay: "M01",
      viTri: "T1",
      trangThai: "Rảnh",
      ngayBDSD: "2024-07-20",
      gioBDSD: "08:00",
      thoiGianSD: "2h",
      maDV: "DV001",
      ngaySDDV: "2024-07-20",
      gioSDDV: "08:00",
      soLuong: 2,
      tongTien: "200000",
    },
    {
      maKH: "KH002",
      tenKH: "Tran Thi B",
      maMay: "M02",
      viTri: "T2",
      trangThai: "Rảnh",
      ngayBDSD: "2024-07-21",
      gioBDSD: "09:00",
      thoiGianSD: "3h",
      maDV: "DV002",
      ngaySDDV: "2024-07-21",
      gioSDDV: "09:00",
      soLuong: 3,
      tongTien: "300000",
    },
  ];

  function populateTable(data) {
    var $tableBody = $("#table-body");
    $tableBody.empty();

    data.forEach(function (item, index) {
      var row = `
        <tr>
          <td>${item.maKH}</td>
          <td>${item.tenKH}</td>
          <td>${item.maMay}</td>
          <td>${item.viTri}</td>
          <td>${item.trangThai}</td>
          <td>${item.ngayBDSD}</td>
          <td>${item.gioBDSD}</td>
          <td>${item.thoiGianSD}</td>
          <td>${item.maDV}</td>
          <td>${item.ngaySDDV}</td>
          <td>${item.gioSDDV}</td>
          <td>${item.soLuong}</td>
          <td>${item.tongTien}</td>
          <td>
            <button class="btn btn-warning edit-may"><i class="fa fa-pencil-square-o"></i></button>
            <button class="btn btn-danger delete-may" data-index="${index}"><i class="fa fa-trash-o"></i></button>
          </td>
        </tr>
      `;
      $tableBody.append(row);
    });

    // Add event
    $tableBody.on("click", ".delete-may", function () {
      var index = $(this).data("index");
      var confirmDelete = confirm("Bạn có chắc chắn muốn xóa mục này không?");
      if (confirmDelete) {
        data.splice(index, 1);
        populateTable(data);
      }
    });
  }

  populateTable(data);
</script>
